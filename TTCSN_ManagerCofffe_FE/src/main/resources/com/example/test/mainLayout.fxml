<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.test.Controller.MainController">

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <padding><Insets top="16" right="12" bottom="16" left="12"/></padding>

            <!-- logo -->
            <HBox alignment="CENTER_LEFT" spacing="8" styleClass="logoRow">
                <Label text="⧉" styleClass="logoIcon"/>
                <Label text="LOGO" styleClass="logoText"/>
            </HBox>

            <!-- menu buttons -->
            <VBox spacing="6">
                <fx:define>
                    <ToggleGroup fx:id="menuGroup"/>
                </fx:define>

                <ToggleButton text="Trang chủ"   onAction="#openHome"      toggleGroup="$menuGroup" styleClass="menuBtn"/>
                <ToggleButton text="Bán hàng"    onAction="#openSales"     toggleGroup="$menuGroup" styleClass="menuBtn"/>
<!--                <ToggleButton text="Thống kê"    onAction="#openStats"     toggleGroup="$menuGroup" styleClass="menuBtn"/>-->
<!--                <ToggleButton text="Sản phẩm | Menu" onAction="#openProducts" toggleGroup="$menuGroup" styleClass="menuBtn"/>-->
<!--                <ToggleButton text="Hóa đơn"     onAction="#openInvoices"  toggleGroup="$menuGroup" styleClass="menuBtn"/>-->
<!--                <ToggleButton text="Nhân viên"   onAction="#openStaff"     toggleGroup="$menuGroup" styleClass="menuBtn"/>-->
<!--                <ToggleButton text="Khách hàng"  onAction="#openCustomers" toggleGroup="$menuGroup" styleClass="menuBtn"/>-->
<!--                <ToggleButton text="Khuyến mãi"  onAction="#openPromotions"toggleGroup="$menuGroup" styleClass="menuBtn"/>-->

                <Separator/>
                <Button text="Đăng xuất" styleClass="logoutBtn" onAction="#logout"/>
            </VBox>
        </VBox>
    </left>

    <!-- HEADER -->
    <top>
        <HBox spacing="12" styleClass="header">
            <padding><Insets top="14" left="20" right="20" bottom="14"/></padding>
            <Label text="Trang chủ" fx:id="titleLabel" styleClass="pageTitle"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <ImageView fitHeight="36" fitWidth="36">
                    <image>
                        <!-- dùng ảnh của bạn nếu muốn -->
                    </image>
                </ImageView>
                <VBox spacing="2">
                    <Label text="Tên nhân viên" styleClass="userName"/>
                    <Label text="Chức vụ" styleClass="userRole"/>
                </VBox>
                <Circle radius="4" styleClass="statusDot"/>
            </HBox>
        </HBox>
    </top>

    <!-- CONTENT: nơi nạp view -->
    <center>
        <StackPane fx:id="contentHolder" styleClass="contentHolder"/>
    </center>
</BorderPane>
